@model m21_e2_WEB.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="EditUser" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="control-label">Логин</label>
        <input type="text" asp-for="UserName" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-sm btn-secondary" />
    </div>
</form>